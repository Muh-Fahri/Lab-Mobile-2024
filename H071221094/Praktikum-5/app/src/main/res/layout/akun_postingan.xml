<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AkunPostinganActivity"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">



        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="200dp">


           <FrameLayout
               android:layout_width="130dp"
               android:layout_height="80dp"
               android:layout_marginTop="50dp">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/profil_akunpos"
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_marginBottom="10dp"
                   android:src="@drawable/visacashf1" />

               <TextView
                   android:id="@+id/nama_akunpos"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Visa Cash App RB F1 Team"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:textAlignment="center"
                   android:textSize="10dp"
                   android:layout_marginTop="55dp"/>
           </FrameLayout>
        </FrameLayout>


        <TextView
            android:id="@+id/namaUser_akunpos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="visacashapprb"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="150dp">

            <TextView
                android:id="@+id/follower_jumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3,2JT"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follower"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="250dp">

            <TextView
                android:id="@+id/following_jumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postingan"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/postingan_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/visacashpostingan"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>








</LinearLayout>